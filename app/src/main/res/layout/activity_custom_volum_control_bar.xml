<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:volum="http://schemas.android.com/apk/res/com.wangshun.apptest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55ffffff"
    android:orientation="vertical"
    >

    <com.wangshun.apptest.view.zdy.CustomVolumControlBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        volum:bg="@mipmap/customize"
        volum:volumCircleWidth="12dp"
        volum:dotCount="20"
        volum:volumFirstColor="#252420"
        volum:volumSecondColor="#FDFDFD"
        volum:splitSize="25" />

    <com.wangshun.apptest.view.zdy.CustomVolumControlBar
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        volum:bg="@mipmap/icon"
        volum:volumCircleWidth="10dp"
        volum:dotCount="10"
        volum:volumFirstColor="#00ff00"
        volum:volumSecondColor="#ff0000"
        volum:splitSize="15" />

    <com.wangshun.apptest.view.zdy.CustomVolumControlBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        volum:bg="@mipmap/icon_qq_small"
        volum:volumCircleWidth="10dp"
        volum:dotCount="8"
        volum:volumFirstColor="#ADC6E5"
        volum:volumSecondColor="#0362DB"
        volum:splitSize="25" />

</LinearLayout>